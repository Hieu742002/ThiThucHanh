<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:scrollbarFadeDuration="0"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thực đơn 7 món nước"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textStyle="bold"/>

    <!--    Beer -->
    <ImageButton
        android:id="@+id/imgBeer"
        android:src="@drawable/beer"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_below="@+id/txtTitle"/>

    <TextView
        android:id="@+id/txtBeerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgBeer"
        android:text="Name: Beer"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txtTitle"/>

    <TextView
        android:id="@+id/txtNumBeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txtBeerName"
        android:text=""
        android:textSize="16dp"
        android:layout_below="@id/txtTitle"/>
    <TextView
        android:id="@+id/txtBeerContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgBeer"
        android:text="Description: an alcoholic drink made from grain and hops"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txtBeerName"/>

    <!--    Cocktail -->
    <ImageButton
        android:id="@+id/imgCocktail"
        android:src="@drawable/cocktail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_below="@+id/imgBeer"/>

    <TextView
        android:id="@+id/txtCocktailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgCocktail"
        android:text="Name: Cocktail"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txtBeerContent"/>

    <TextView
        android:id="@+id/txtNumCocktail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txtCocktailName"
        android:text=""
        android:textSize="16dp"
        android:layout_below="@id/txtBeerContent"/>

    <TextView
        android:id="@+id/txtCocktailContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgCocktail"
        android:text="Description: an mixed drink with at least two cocktail ingredients"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txtCocktailName"/>

    <!--    Lemonade -->
    <ImageButton
        android:id="@+id/imgLemonade"
        android:src="@drawable/lemonade"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_below="@+id/imgCocktail"/>

    <TextView
        android:id="@+id/txtLemonadeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCocktailContent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgLemonade"
        android:text="Name: Lemonade"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/txtNumLemonade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txtLemonadeName"
        android:text=""
        android:textSize="16dp"
        android:layout_below="@id/txtCocktailContent"/>

    <TextView
        android:id="@+id/txtLemonadeContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgLemonade"
        android:text="Description: a sweetened lemon-flavored drink"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txtLemonadeName"/>

    <!--    Milkshake -->
    <ImageButton
        android:id="@+id/imgMilkshake"
        android:src="@drawable/milkshake"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_below="@+id/imgLemonade"/>

    <TextView
        android:id="@+id/txtMilkshakeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLemonadeContent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgMilkshake"
        android:text="Name: Milkshake"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/txtNumMilkshake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txtMilkshakeName"
        android:text=""
        android:textSize="16dp"
        android:layout_below="@id/txtLemonadeContent"/>

    <TextView
        android:id="@+id/txtMilkshakeContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgLemonade"
        android:text="Description: a cold drink made of milk and typically ice cream"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txtMilkshakeName"/>

    <!--    Orange juice -->
    <ImageButton
        android:id="@+id/imgOrangeJuice"
        android:src="@drawable/orangejuice"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_below="@+id/imgMilkshake"/>

    <TextView
        android:id="@+id/txtOrangeJuiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMilkshakeContent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/imgOrangeJuice"
        android:text="Name: Orange Juice"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/txtNumOrangeJuice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txtOrangeJuiceName"
        android:text=""
        android:textSize="16dp"
        android:layout_below="@id/txtMilkshakeContent"/>

    <TextView
        android:id="@+id/txtOrangeJuiceContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgLemonade"
        android:text="Description: an alcoholic drink made from grain and hops"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txtOrangeJuiceName"/>
    <!--    Beer 2-->
    <ImageButton
        android:id="@+id/imgBeerGermany"
        android:src="@drawable/beer"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_below="@+id/imgOrangeJuice"/>

    <TextView
        android:id="@+id/txtBeerGermanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOrangeJuiceContent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgBeer"
        android:text="Name: Beer Germany"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/txtNumBeerGermany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txtBeerGermanyName"
        android:text=""
        android:textSize="16dp"
        android:layout_below="@id/txtOrangeJuiceContent"/>

    <TextView
        android:id="@+id/txtBeerGermanyContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgBeer"
        android:text="Description: an alcoholic drink made from grain and hops"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txtBeerGermanyName"/>

    <!--    Cocktail 2 -->
    <ImageButton
        android:id="@+id/imgCocktailThai"
        android:src="@drawable/cocktail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:layout_below="@+id/imgBeerGermany"/>

    <TextView
        android:id="@+id/txtCocktailThaiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBeerGermanyContent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgCocktail"
        android:text="Name: Cocktail Thai"
        android:textColor="@color/black"
        android:textSize="16dp"/>


    <TextView
        android:id="@+id/txtNumCocktailThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txtCocktailThaiName"
        android:text=""
        android:textSize="16dp"
        android:layout_below="@id/txtBeerGermanyContent"/>

    <TextView
        android:id="@+id/txtCocktailThaiContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgCocktail"
        android:text="Description: an mixed drink with at least two cocktail ingredients"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txtCocktailThaiName"/>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="CONFIRM"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@id/txtCocktailThaiContent"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtCocktailThaiContent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:text="RESET"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>